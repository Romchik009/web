@import url('https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap');

* { 
    margin: 0;  /* задаёт размер внешнего отступа вокруг элемента */ 
    padding: 0; /* задает внутренние отступы от границы элемента до его внутреннего содержимого */ 
    font-family: "PT Serif", serif; /* приоритетный список из одного или нескольких названий семейства шрифтов и/или общее имя шрифта для выбранного элемента */ 
} 
 
html { 
    scroll-behavior: smooth; /*это свойство, которое управляет прокруткой элементов на веб-странице */ 
} 
 
a { 
    text-decoration: none; /* это делает текст черным и отключает все декорации */ 
    color: black; 
    font-weight: bold; /* устанавливает насколько жирным будет выглядеть текст в элементе */ 
} 
 
img { 
    padding-left: 10px; /* устанавливает отступ с левой стороны элемента */ 
    padding-top: 20px; /* это свойство, которое устанавливает расстояние между верхним внутренним краем рамки элемента и его содержимым */ 
} 
 
.menu-header { 
    display: flex; /* это свойство, которое определяет, как элемент должен быть показан в документе */ 
    align-items: center; /* это свойство для выравнивания элементов внутри контейнера по поперечной оси */ 
    justify-content: center; /* используется для выравнивания флекс-элементов внутри флекс-контейнера по основной оси */ 
} 
 
.menu-header ul { 
    display: flex; /* это свойство, которое определяет, как элемент должен быть показан в документе */ 
    padding: 0; /* задает внутренние отступы от границы элемента до его внутреннего содержимого */ 
    list-style-type: none; /* указывает вид маркера для элементов списка, none( нету )*/ 
    margin: 0; /* задаёт размер внешнего отступа вокруг элемента */ 
} 
 
.menu-header li { 
    margin-right: 50px; /* сдесь мы меняем местоположение меню */ 
    margin-left: 80px; 
} 
 
a:hover { 
    color: grey; /* цвет окна */ 
} 
 
.background { 
    background-attachment: fixed; /* задний фон */ 
    width: 100%; 
    height: 650px; 
    background-repeat: no-repeat; /* это свойство, которое определяет, как фоновое изображение будет повторяться внутри элемента, когда оно меньше размера элемента */ 
    background-size: cover; /*  позволяет установить размер фонового изображения */ 
    position: relative; /* позиция */ 
    /* filter: brightness(0.7); */ 
} 
 
.content { 
    padding-top: 5px; /* это свойство, которое устанавливает расстояние между верхним внутренним краем рамки элемента и его содержимым */ 
    width: 600px; /* ширина */ 
    height: 200px; /* высота*/ 
    position: absolute; /* позиция*/ 
    top: 50%; /* указывает смещение позиционированного элемента относительно верхнего края */ 
    left: 50%; /* указывает смещение позиционированного элемента относительно левого края */ 
    transform: translate(-50%, -50%); /* это свойство, которое позволяет применять двумерные и трёхмерные преобразования к элементам */ 
    border-radius: 18px; /* это свойство, которое позволяет закруглять углы внешней границы элемента, придавая ему плавный, изогнутый вид */ 
    background-color: rgba(255, 255, 255, 0.9); 
    display: flex; /* это свойство, которое определяет, как элемент должен быть показан в документе */ 
    flex-direction: column; /* позволяет указать направление, в соответствии с которым располагаются флекс элементы внутри флекс контейнера */ 
    align-items: center; /* это свойство для выравнивания элементов внутри контейнера по поперечной оси */ 
    justify-content: center; /* используется для выравнивания флекс-элементов внутри флекс-контейнера по основной оси */ 
    text-align: center; /* это свойство для определения горизонтального выравнивания текста внутри элемента */ 
}
